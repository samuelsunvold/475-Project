<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.mrspd.squareoff">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".Ui.SettingsActivity"
                android:exported="false" />
        <activity android:name=".Ui.ResultActivity" />
        <activity android:name=".Ui.ChooseGridActivity" />
        <activity android:name=".Ui.HomeActivity" />
        <activity android:name=".Ui.SelectPlayersActivity" />
        <activity android:name=".Ui.GameActivity" />
        <activity android:name=".Ui.SpalshScreenActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".Services.MusicService" />
    </application>

</manifest>