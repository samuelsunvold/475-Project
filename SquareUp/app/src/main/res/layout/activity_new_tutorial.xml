<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".Ui.TutorialActivity">

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/tutorial_gif"
            android:layout_width="415dp"
            android:layout_height="510dp"
            android:src="@drawable/finalgif3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="PLAYERS TAKE TURNS
            SELECTING A LINE!"
            android:layout_width="322dp"
            android:layout_height="82dp"
            android:id="@+id/textView2"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tutorial_gif"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="25sp"
            app:flow_verticalAlign="center"
            app:flow_horizontalAlign="center"
            android:fontFamily="@font/black_ops_one"
            android:textColor="#FFFFFF"
            android:textAlignment="center" />

    <TextView
            android:text="THE PLAYER THAT COMPLETES THE BOX GETS THE POINT!"
            android:layout_width="321dp"
            android:layout_height="114dp"
            android:id="@+id/textView3"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/tutorial_gif"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="25sp"
            app:flow_verticalAlign="center"
            app:flow_horizontalAlign="center"
            android:fontFamily="@font/black_ops_one"
            android:textColor="#FFFFFF"
            android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>