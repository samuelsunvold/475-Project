<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrspd.squareoff.Ui.ResultActivity"
    android:background="@drawable/win_background1">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:layout_marginTop="56dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lose.json"
        app:lottie_loop="false" />

    <TextView
            android:id="@+id/btHome"
            android:layout_width="229dp"
            android:layout_height="106dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/dog_tag"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/ic_launcher_background"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/tvWinner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/dog_tag2"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:padding="24dp"
            android:text="@string/winner_is_you"
            android:textColor="@color/ic_launcher_background"
            android:textSize="39sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView2"
            android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>