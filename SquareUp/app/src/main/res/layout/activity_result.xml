<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrspd.squareoff.Ui.ResultActivity"
    android:background="@drawable/win_background1">

    <ImageView
            android:layout_width="156dp"
            android:layout_height="149dp"
            app:srcCompat="@drawable/trophie1"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/lottieAnimationView2"
            app:layout_constraintStart_toStartOf="@+id/lottieAnimationView2"
            app:layout_constraintTop_toTopOf="@+id/lottieAnimationView2"
            app:layout_constraintBottom_toBottomOf="@+id/lottieAnimationView2"
            app:layout_constraintVertical_bias="0.516" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:layout_marginTop="56dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lose.json"
        app:lottie_loop="false" />


    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView1"
            android:layout_width="407dp"
            android:layout_height="310dp"
            android:layout_margin="16dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/confetti"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tvWinner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

    <TextView
            android:id="@+id/btHome"
            android:layout_width="229dp"
            android:layout_height="106dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/dog_tag"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/ic_launcher_background"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/tvWinner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/winnerflag1"

            android:fontFamily="@font/font"
            android:gravity="center"
            android:padding="24dp"
            android:text="@string/winner_is_you"
            android:textColor="@color/ic_launcher_background"
            android:textSize="39sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView2"
            android:layout_marginTop="16dp"
            android:shadowDx="10"
            android:shadowRadius="10"
            android:shadowColor="#FF9800"
            android:shadowDy="10" />

</androidx.constraintlayout.widget.ConstraintLayout>